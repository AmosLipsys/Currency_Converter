<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mossy.assingment1.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:columnCount="2"
    android:rowCount="10"
    >

    <TextView
        android:id="@+id/main_title"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:textSize="30sp"
        android:height="20dp"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:layout_columnSpan="2"
        android:text="@string/title_text"
        />

    <TextView
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:textSize="30sp"
        android:layout_columnWeight=".5"
        android:gravity="end|center_vertical"
        android:layout_columnSpan="1"
        android:text="@string/amount_text"
        />
    <EditText
        android:maxLength="10"
        android:id="@+id/currency_edit_box_1"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="4"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:inputType="numberDecimal"
        android:textSize="30sp"
        android:gravity="center"
        />

    <TextView
        android:layout_row="2"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:textSize="30sp"
        android:layout_columnWeight=".5"
        android:gravity="end|center_vertical"
        android:layout_columnSpan="1"
        android:text="@string/from_text"
        />

    <Spinner
        android:id="@+id/currency_spinner_1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_rowWeight="1"

        android:textAlignment="center" />

    <TextView
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:textSize="30sp"
        android:layout_columnWeight=".5"
        android:gravity="end|center_vertical"
        android:layout_columnSpan="1"
        android:text="@string/to_text"
        />

    <Spinner
        android:id="@+id/currency_spinner_2"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:textAlignment="center" />

    <TextView
        android:layout_row="4"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:textSize="30sp"
        android:layout_columnWeight=".5"
        android:gravity="end|center_vertical"
        android:layout_columnSpan="1"
        android:text="@string/total_text"
        />
    <TextView
        android:id="@+id/currency_edit_box_2"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:inputType="number"
        android:textSize="30sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/stats_text"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:layout_columnSpan="2"
        android:inputType="number"
        android:textSize="15sp"
        android:gravity="start"
        android:text="@string/defaul_status_text"
        android:padding="@dimen/fab_margin"
        android:background="@color/statusTextBackground"
        />
</GridLayout>
